@model EquipmentManagement.Application.Equipments.Queries.Models.UserEquipmentInfo

<div class="kt-portlet">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">
                User equipment information
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="kt-widget13">
            <div class="kt-widget13__item">
                <span class="kt-widget13__desc">
                    Name:
                </span>
                <span class="kt-widget13__text kt-widget13__text--bold">
                    @Model.EquipmentName
                </span>
            </div>
            <div class="kt-widget13__item">
                <span class="kt-widget13__desc kt-align-right">
                    Price:
                </span>
                <span class="kt-widget13__text kt-widget13__text--bold">
                    @Model.EquipmentPrice
                </span>
            </div>
            <div class="kt-widget13__item">
                <span class="kt-widget13__desc">
                    Status:
                </span>
                <span class="kt-widget13__text">
                    @if (Model.IsExpired)
                    {
                        <span class="kt-badge kt-badge--danger kt-badge--inline kt-badge--pill">Expired</span>
                    }
                    else
                    {
                        <span class="kt-badge kt-badge--success kt-badge--inline kt-badge--pill">Active</span>
                    }
                </span>
            </div>
            <div class="kt-widget13__item">
                <span class="kt-widget13__desc">
                    Status:
                </span>
                <span class="kt-widget13__text">
                    @if (Model.IsReturned)
                    {
                        <span class="btn btn-bold btn-sm btn-font-sm  btn-label-dark">Yes</span>
                    }
                    else
                    {
                        <span class="btn btn-bold btn-sm btn-font-sm  btn-label-brand">
                            @if (Model.IsExpired)
                            {
                                <i class="flaticon-warning text-danger"></i>
                            }
                            No
                        </span>
                    }
                </span>
            </div>
            <div class="kt-widget13__item">
                <span class="kt-widget13__desc kt-align-right">
                    Received Date:
                </span>
                <span class="kt-widget13__text kt-widget13__text--bold">
                    @Model.ReceivedDate.ToString("MM/dd/yyyy")
                </span>
            </div>
            <div class="kt-widget13__item">
                <span class="kt-widget13__desc kt-align-right">
                    Expiration Date:
                </span>
                <span class="kt-widget13__text kt-widget13__text--bold">
                    @Model.ExpirationDate.ToString("MM/dd/yyyy")
                </span>
            </div>
        </div>
    </div>
</div>
