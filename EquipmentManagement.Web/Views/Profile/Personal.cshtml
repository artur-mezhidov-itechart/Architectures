@model EquipmentManagement.Web.ViewModels.Profile.PersonalViewModel

@{
    ViewData["Title"] = "Personal Information";
    Layout = "_ProfileLayout";
}

<div class="row">
    <div class="col-xl-12">
        <div class="kt-portlet">
            <div class="kt-portlet__head">
                <div class="kt-portlet__head-label">
                    <h3 class="kt-portlet__head-title">@ViewData["Title"] <small>update your personal informaiton</small></h3>
                </div>
            </div>
            <form asp-controller="Profile" asp-action="Personal" class="kt-form kt-form--label-right">
                <div class="kt-portlet__body">
                    <div class="kt-section kt-section--first">
                        <div class="kt-section__body">

                            <div class="row">
                                <label class="col-xl-3"></label>
                                <div class="col-lg-9 col-xl-6">
                                    <h3 class="kt-section__title kt-section__title-sm">Customer Info:</h3>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-xl-3 col-lg-3 col-form-label">Avatar</label>
                                <div class="col-lg-9 col-xl-6">
                                    <div class="kt-avatar kt-avatar--outline kt-avatar--circle" id="kt_apps_user_add_avatar">
                                        <div class="kt-avatar__holder" style="background-image: url(&quot;/assets/media/users/default.jpg&quot;);"></div>
                                        <label class="kt-avatar__upload" data-toggle="kt-tooltip" title="" data-original-title="Change avatar">
                                            <i class="fa fa-pen"></i>
                                            <input type="file" name="profile_avatar" accept=".png, .jpg, .jpeg">
                                        </label>
                                        <span class="kt-avatar__cancel" data-toggle="kt-tooltip" title="" data-original-title="Cancel avatar">
                                            <i class="fa fa-times"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-xl-3 col-lg-3 col-form-label">First Name</label>
                                <div class="col-lg-9 col-xl-6">
                                    <input asp-for="FirstName" class="form-control">
                                    <span class="form-text text-muted">Please enter your first name.</span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-xl-3 col-lg-3 col-form-label">Last Name</label>
                                <div class="col-lg-9 col-xl-6">
                                    <input asp-for="LastName" class="form-control">
                                    <span class="form-text text-muted">Please enter your last name.</span>
                                </div>
                            </div>
                            
                            <div class="form-group row">
                                <label class="col-xl-3 col-lg-3 col-form-label">Post</label>
                                <div class="col-lg-9 col-xl-6">
                                    <input asp-for="Post" class="form-control">
                                    <span class="form-text text-muted">Please enter your post.</span>
                                </div>
                            </div>
                            
                            <div class="form-group row">
                                <label class="col-xl-3 col-lg-3 col-form-label">About</label>
                                <div class="col-lg-9 col-xl-6">
                                    <textarea asp-for="About" class="form-control"></textarea>
                                    <span class="form-text text-muted">Please enter about you.</span>
                                </div>
                            </div>

                            <div class="row">
                                <label class="col-xl-3"></label>
                                <div class="col-lg-9 col-xl-6">
                                    <h3 class="kt-section__title kt-section__title-sm">Contact Info:</h3>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-xl-3 col-lg-3 col-form-label">Contact Phone</label>
                                <div class="col-lg-9 col-xl-6">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="la la-phone"></i></span>
                                        </div>
                                        <input asp-for="PhoneNumber" class="form-control">
                                    </div>
                                    <span class="form-text text-muted">We'll never share your phone number with anyone else.</span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-xl-3 col-lg-3 col-form-label">Email Address</label>
                                <div class="col-lg-9 col-xl-6">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="la la-at"></i></span>
                                        </div>
                                        <input asp-for="Email" class="form-control">
                                    </div>
                                    <span class="form-text text-muted">We'll never share your email with anyone else.</span>
                                </div>
                            </div>

                            <div class="row">
                                <label class="col-xl-3"></label>
                                <div class="col-lg-9 col-xl-6">
                                    <h3 class="kt-section__title kt-section__title-sm">Company Info:</h3>
                                </div>
                            </div>
                            
                            <div class="form-group row">
                                <label class="col-xl-3 col-lg-3 col-form-label">Company Name</label>
                                <div class="col-lg-9 col-xl-6">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="la la-building"></i></span>
                                        </div>
                                        <input asp-for="CompanyName" class="form-control">
                                    </div>
                                    <span class="form-text text-muted">Please enter your company name.</span>
                                </div>
                            </div>
                            
                            <div class="form-group form-group-last row">
                                <label class="col-xl-3 col-lg-3 col-form-label">Company Site</label>
                                <div class="col-lg-9 col-xl-6">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="la la-internet-explorer"></i></span>
                                        </div>
                                        <input asp-for="CompanySite" class="form-control">
                                    </div>
                                    <span class="form-text text-muted">Please enter your company site.</span>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="kt-portlet__foot">
                    <div class="kt-form__actions">
                        <div class="row">
                            <div class="col-lg-3 col-xl-3">
                            </div>
                            <div class="col-lg-9 col-xl-9">
                                <button type="submit" class="btn btn-success">Save</button>
                                <a asp-controller="Profile" asp-action="Index" class="btn btn-secondary">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
