@model EquipmentManagement.Web.ViewModels.Reports.RequestsViewModel
@{
    ViewData["Title"] = "Requests report";
}

<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="kt-portlet">
        <div class="kt-portlet__body  kt-portlet__body--fit">
            <div class="row row-no-padding row-col-separator-lg">
                <div class="col-md-12 col-lg-6 col-xl-3">
                    <partial name="_ProgressPercentChart" model="@Model.FurnitureRequestCount" />
                </div>
                <div class="col-md-12 col-lg-6 col-xl-3">
                    <partial name="_ProgressPercentChart" model="@Model.AccessoryRequestCount" />
                </div>
                <div class="col-md-12 col-lg-6 col-xl-3">
                    <partial name="_ProgressPercentChart" model="@Model.DeviceRequestCount" />
                </div>
                <div class="col-md-12 col-lg-6 col-xl-3">
                    <partial name="_ProgressPercentChart" model="@Model.ToolsRequestCount" />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <partial name="_LineChart" model="@Model.RequestsLineChartByEquipmentType" />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <partial name="_AmChart" model="@Model.AmChartByRequestStatus" />
        </div>
    </div>
</div>

@section Scripts {
    <script src="//www.google.com/jsapi" type="text/javascript"></script>
    <script src="~/assets/js/components/google-charts.js"></script>
    <script src="~/assets/js/components/amcharts.js"></script>
    <script src="~/assets/js/components/pie.js"></script>
    <script src="~/assets/js/components/animate.min.js"></script>
    <script src="~/js/reports-helpers.js"></script>
    <script src="~/js/reports-requests.js"></script>
}
