@using EquipmentManagement.Web.HtmlHelpers
@model EquipmentManagement.Web.ViewModels.Reports.UserEquipmentChartViewModel

<div class="kt-portlet kt-portlet--fit kt-portlet--head-noborder kt-portlet--height-fluid-half">
    <div class="kt-portlet__head kt-portlet__space-x">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">@Model.Title</h3>
        </div>
        <div class="kt-portlet__head-toolbar"></div>
    </div>
    <div class="kt-portlet__body kt-portlet__body--fluid">
        <div class="kt-widget20">
            <div class="kt-widget20__content kt-portlet__space-x">
                <span class="kt-widget20__number kt-font-@Model.Type">@Model.UserEquipmentCount.TotalCount+</span>
                <span class="kt-widget20__desc">@Model.Label</span>
            </div>
            <div class="kt-widget20__chart" style="height:130px;">
                <canvas id="@Model.ChartId"></canvas>
            </div>
        </div>
    </div>
</div>

<script>
    if (!window.userEquipmentCountOptions) {
        window.userEquipmentCountOptions = {};
    }
    window.userEquipmentCountOptions['@Model.ChartId'] = {
        id: '@Model.ChartId',
        items: @Html.ToJson(Model.UserEquipmentCount.Items),
        type: '@Model.Type'
    }
</script>
