@using EquipmentManagement.Web.HtmlHelpers
@model EquipmentManagement.Web.ViewModels.Reports.LineChartViewModel

<div class="kt-portlet kt-portlet--tab">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="la la-gear"></i>
            </span>
            <h3 class="kt-portlet__head-title">@Model.Title</h3>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div id="@Model.ChartId" style="height:500px;"></div>
    </div>
</div>

<script>
    if (!window.lineChartOptions) {
        window.lineChartOptions = {};
    }
    window.lineChartOptions['@Model.ChartId'] = @Html.ToJson(Model);
</script>
